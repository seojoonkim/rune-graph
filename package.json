{
  "name": "rune-hub",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @rune-hub/web dev",
    "dev:cli": "bun run --filter @rune-hub/cli dev",
    "build:cli": "bun run --filter @rune-hub/cli build",
    "build": "bun run --filter @rune-hub/web build && bun run --filter @rune-hub/cli build",
    "lint": "bun run --filter @rune-hub/web lint"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}
